<configuration>
  <!-- Se LOG_DIR nÃ£o vier por -DLOG_DIR, usa /app/logs -->
  <property name="LOG_DIR" value="${LOG_DIR:-/app/logs}" />

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/steve.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/steve-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <totalSizeCap>3GB</totalSizeCap>
      <maxHistory>14</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>[%-5level] %d %c (%thread) - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="FILE"/>
  </root>
</configuration>
